{
  "name": "nightwish",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn clean && next dev -p 4000",
    "build": "npm run clean && next build && next export -o build/",
    "clean": "rm -rf .next && rm -rf ./build",
    "start": "next start",
    "serve-local": "npm run build && cd build && live-server --port=8080 --entry-file=./index.html",
    "prettier": "prettier --write ./src/**/*.{ts,tsx,scss}",
    "lint:fix": "eslint --fix ./src/**/*.{ts,tsx}"
  },
  "dependencies": {
    "@aws-amplify/api": "^4.0.0",
    "@aws-amplify/core": "^4.0.2",
    "@aws-amplify/pubsub": "^4.0.0",
    "@svgr/webpack": "^5.5.0",
    "animate.css": "^4.1.1",
    "axios": "^0.21.1",
    "dayjs": "^1.10.5",
    "live-server": "^1.2.1",
    "next": "^10.2.0",
    "party-js": "^2.0.1",
    "react": "17.0.2",
    "react-accessible-accordion": "^3.3.4",
    "react-countdown": "^2.3.2",
    "react-device-detect": "^1.17.0",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.2.2",
    "react-lottie": "^1.2.3",
    "react-responsive-carousel": "^3.2.18",
    "react-reveal": "^1.2.2",
    "react-svg": "^13.0.3",
    "reconnecting-websocket": "^4.4.0",
    "sass": "^1.32.11",
    "socket.io-client": "^4.0.1",
    "video.js": "^7.12.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.3",
    "@types/react-lottie": "^1.2.5",
    "@types/video.js": "^7.3.15",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.24.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "4.2.3",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.10",
    "prettier": "^2.2.1",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-scss": "^3.19.0",
    "tailwindcss": "^2.1.1",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn run prettier",
      "yarn run lint:fix"
    ],
    "**/*.scss": [
      "yarn run prettier"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  }
}
